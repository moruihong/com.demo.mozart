<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="Theme.GalleryBase" parent="android:Theme.Holo">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="playerPopupBottom" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/player_popup_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/player_popup_bottom_out</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="Theme.Gallery" parent="Theme.GalleryBase">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    
